
<%- include ./shared/_header %>
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="../assets/global/plugins/bootstrap-datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
<%- include ./shared/_top %>
<%- include ./shared/_sidebar %>        

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title">
                工作组 <small>查看企业信息</small>
            </h3>
                
            <!-- END PAGE HEADER-->
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">查询</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <form  id='search'>  
                                           
                        <label class="control-label" for="txtBeginTime">组名：</label>
                        <input type="text" name="name" class="input-control" />
                       
                        <button type="button" id="btnSearch" class="btn btn-success"> <i class="fa fa-search"></i>查询 </button>
                    </form>
                </div><!-- /.box-body -->
            </div>
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <div id="group_tree"></div>
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-picture text-center"></i> 数据列表
                                
                            </div> 
                            <div class="tools caption">
                            
                                <a href="#" onclick="app.show_modal(0);" title='添加记录'>
                                    <i class="fa fa-plus"></i>
                                </a>
                                     
                            </div>                       
                        </div>
                        <div class="portlet-body">
                            <div class="table-scrollable">                  
                                    <table id="grid" class="table table-striped table-bordered table-hover dataTable">
                                        <thead>
                                            <tr>
                                                <th>#</th> 
                                                <th>组织名称</th> 
                                                <th>联系人</th> 
                                                <th>联系方式</th>                             
                                                <th>地址</th>  
                                                <th>备注</th>                                                                           
                                                <th>操作</th> 
                                            </tr>
                                        </thead>
                                        <tbody v-if = "DataList.length > 0">
                                            <tr v-for = "(item, index) in DataList">
                                                <td>{{ index+1 }}</td> 
                                                <td>{{ item.GroupName }}</td> 
                                                <td>{{ item.Linker }}</td> 
                                                <td>{{ item.Phone }}</td> 
                                                <td>{{ item.Address }}</td>       
                                                <td>{{ item.Remark }}</td>       
                                                <td><a href='#'>编辑</a><a href='#'>删除</a></td>
                                            </tr>
                                        </tbody>
                                        <tbody v-else>
                                            <tr><td colspan="7" style="text-align:center;">没有数据</td></tr>
                                        </tbody>
                                    </table>				
                            </div>
                            <div>
                                <ul id="Pagination" class="pagination"></ul>
                            </div>

                            
                        </div>
                    </div>
                </div>	
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->

    <!-- edit -->
    <div class="modal fade" id="mod_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title">组织管理</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label for="txtGroupName">组织名称</label>
                        <input type="text" id="txtGroupName" name="GroupName" class="form-control" placeholder="请输入组织名称" />
                    </div>
                    <div class="form-group">
                        <label for="txtLinker">联系人</label>
                        <input type="text" id="txtLinker" name="Linker" class="form-control" placeholder="请输入联系人" />
                    </div>       
                    <div class="form-group">
                        <label for="txtPhone">联系方式</label>
                        <input type="text" id="txtPhone" name="Phone" class="form-control" placeholder="请输入联系方式" />
                    </div>
                    <div class="form-group">
                        <label for="txtAddress">地址</label>
                        <input type="text" id="txtAddress" name="Address" class="form-control" placeholder="请输入地址" />
                    </div>
                    <div class="form-group">
                        <label for="txtRemark">备注</label>
                        <input type="text" id="txtRemark" name="Remark" class="form-control" placeholder="请输入备注" />
                    </div>     
                    <div class="form-group">
                        <input type="hidden" id="txtID" name="ID" class="form-control" placeholder="请输入ID" />                        
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
                    <a href="#" id="btnOK" class="btn btn-primary">保存</a>
                </div>
            </div>
        </div>
    </div><!-- /edit -->
    
<%- include ./shared/_bottom %>
<%- include ./shared/_scripts %>
	<script src="../assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
	<script src="../assets/global/plugins/bootstrap-paginator/bootstrap-paginator.js"></script>	    
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="../assets/global/plugins/bootstrap-datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.zh-CN.js" type="text/javascript"></script>    
    <!-- END PAGE LEVEL PLUGINS -->
    <script src="/javascripts/include/date-utils.min.js"></script>
    <script src="/javascripts/include/query.js"></script>
    <script src="/javascripts/group.js"></script>
<%- include ./shared/_footer %>
