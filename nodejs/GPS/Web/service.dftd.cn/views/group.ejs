                                                            </tr>
                                                        </thead>
                                                        <tbody v-if = "VehicleList.length > 0">
                                                            <tr v-for = "(item, index) in VehicleList">
                                                                <td>{{ index+1 }}</td> 
                                                                <td>{{ item.GPSID }}</td> 
                                                                <td>{{ item.VehicleNo }}</td> 
                                                                <td>{{ item.VehicleID }}</td>                                            
                                                                <td><a href='#' v-on:click="deleteGroupVehicle(item.ID)">删除</a></td>
                                                            </tr>
                                                        </tbody>
                                                        <tbody v-else>
                                                            <tr><td colspan="7" style="text-align:center;">没有数据</td></tr>
