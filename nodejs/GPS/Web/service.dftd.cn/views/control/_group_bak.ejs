<link href="../assets/global/plugins/bootstrap-multiselect/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
<script src="../assets/global/plugins/bootstrap-multiselect/js/bootstrap-multiselect.js"></script>
<script >
    var vehicleGroup=null;    
    
    if(window.sessionStorage){
        vehicleGroup = sessionStorage.getItem("vehicle_group");
        if(vehicleGroup){
            renderList(vehicleGroup);
        }
    }
    if(!vehicleGroup){
        $.get('/vehicle/group',function(result){ 
            if(window.sessionStorage){
                sessionStorage.setItem("vehicle_group",result.group);
            }
            renderList(result.group);
        })
    }

    function renderList(vehicleGroup){
        $('.multiselect').html(vehicleGroup);   
        $('.multiselect').multiselect("destroy").multiselect({ nonSelectedText: '请选择',enableFiltering: true, includeSelectAllOption: true, selectAllText: '全部选择', enableClickableOptGroups: true, buttonWidth: 150, maxHeight: 300 });     
    }
    
</script>