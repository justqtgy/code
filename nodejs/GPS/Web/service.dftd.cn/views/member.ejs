                </div>	
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->

    <!-- edit -->
    <div class="modal fade" id="mod_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title">用户信息</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body ">                       
                    <form  id='record'>                              
                        <div class="row">    
                            <div class="col-md-6">          
                                <div class="form-group">
                                    <label for="txtAccount">账号</label>
                                    
                                    <input type="text" id="txtAccount" name="account" autocomplete="off" class="form-control" placeholder="请输入账号"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="txtPassword">密码</label>
                                    <input type="password" id="txtPassword" name="password" autocomplete="new-password" class="form-control" placeholder="请输入密码"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">    
                            <div class="form-group">
                            <label for="txtTrueName">姓名</label>                                    
                            <input type="text" id="txtTrueName" name="trueName" class="form-control" placeholder="请输入姓名"/>
                        </div>
                            </div>
                            <div class="col-md-6"> 
                                <div class="form-group">
                                <label for="txtEmail">Email</label>
                                <input type="text" id="txtEmail" name="email" class="form-control" placeholder="请输入Email"/>
                            </div>              
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6"> 
                            <div class="form-group">
                                <label for="txtMobile">联系电话</label>
                                <input type="text" id="txtMobile" name="mobile" class="form-control" placeholder="请输入联系电话"/>
                            </div>   
                            </div>
                            <div class="col-md-6">   
                            <div class="form-group">
                                <label for="txtExpireTime">过期时间</label>
                                <input type="text" id="txtExpireTime" name="expireTime" class="form-control date-picker"   data-date-format="yyyy-mm-dd" placeholder="请输入ExpireTime"/>
                            </div>         
                            </div>
                        </div>              
                        <div class="row">
                            <div class="col-md-6"> 
                            <div class="form-group">
                                <label >是否管理员</label>
                                <input type="checkbox" id="chkIsAdmin" name="isAdmin"  />
                            </div>   
                            </div>
                           
                        </div>              
                        <div class="form-group">
                            <input type="hidden" id="txtID" name="id" class="form-control" placeholder="请输入ID" />                        
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
                    <a href="#" id="btnOK" class="btn btn-primary">保存</a>
                </div>
            </div>
        </div>
    </div><!-- /edit -->

    <!-- edit -->
    <div class="modal fade" id="mod_password" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" style="width:360px;">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title">修改密码</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body ">   
                    <form id="password">                    
                    <div class="form-body"> 
                        <div class="form-group">
                            <label for="txtPassword">新密码</label>
                            <input type="password" id="txtPassword" name="password" autocomplete="new-password" class="form-control input-large" placeholder="请输入新密码"/>
                        </div>
                        <div class="form-group">
                            <label for="txtPassword">确认密码</label>
                            <input type="password" id="txtConfirmPassword" name="confirmPassword" autocomplete="new-password" class="form-control input-large" placeholder="请再次输入新密码"/>
                        </div>
                        <div class="form-group">
                            <input type="hidden" id="txtUserID" name="id" class="form-control input-medium" placeholder="请输入ID" />                        
                            <input type="hidden" id="txtUserAccount" name="account" class="form-control input-medium" placeholder="请输入ID" />                        
                        </div>
                    </div></form>    
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
                    <a href="#" id="btnChange" class="btn btn-primary">保存</a>
                </div>
            </div>
        </div>
    </div><!-- /edit -->
    
