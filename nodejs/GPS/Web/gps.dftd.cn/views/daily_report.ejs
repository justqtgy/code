<%- include shared/_header %>
<%- include shared/_top %>
<%- include shared/_sidebar %>
        <div id="loading">
			<img src="/images/loading.gif" alt="loading" />
		</div>
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
		      <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title">
            成本核算 <small>行驶里程、油耗信息</small>
            </h3>
             
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">查询</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
					<form  id='search'>         
						<label class="control-label" for="txtBeginTime">开始时间：</label><input type="text" id="txtBeginTime" name="begintime" class="form_datetime"  value="<%= start_date %>"/>
						<label class="control-label" for="txtEndTime">结束时间：</label><input type="text" id="txtEndTime" name="endtime" class="form_datetime" value="<%= end_date %>"/>
						<label class="control-label" for="selCar">车辆选择：</label><select class="multiselect display-none" multiple="multiple"></select>
						<button type="button" id="btnSearch" class="btn btn-success"> <i class="fa fa-search"></i>查询 </button>
					</form>
                </div><!-- /.box-body -->
            </div>
            
            <!-- END PAGE HEADER-->
            
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
              <div class="col-md-12">
                <div class="portlet box green">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-picture"></i> 数据列表
						</div>					
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table id="grid" class="table table-striped table-bordered table-hover dataTable">
							<thead>
							<tr>                 
								<th>车牌号</th>            
								<th>设备状态</th>   
								<th>油票状态</th>
								<th>油耗</th>
								<th>均价</th>
								<th>总金额</th>                 
                                <th>总里程</th>            
                                <th>百公里油耗</th>            
							</tr>
							</thead>
							<tbody>
							
							</tbody>
							</table>				
						</div>
						<div>
							<ul id="Pagination" class="pagination"></ul>
						</div>
					</div>
				</div>
              </div>
            </div>
            <!-- END PAGE CONTENT-->

            
          </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
    
	<!-- edit -->
    <div class="modal fade dispaly-none" id="mod_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title"><span id="lblCarNumber"></span>_加油明细</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body">
                    <table id="detail" class="table table-striped table-bordered table-hover dataTable">
                        <thead>
                        <tr>              
                            <th>日期</th>    
                            <th>设备状态</th>   
                            <th>系统加油</th>
                            <th>油票</th>                            
                            <th>总金额</th>
                                     
                        </tr>
                        </thead>
                        <tbody>
                        
                        </tbody>
                    </table>				
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>                    
                </div>
            </div>
        </div>
    </div><!-- /edit -->
