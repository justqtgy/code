<%- include ./shared/_header %>
<!-- BEGIN PAGE LEVEL PLUGINS -->
<link href="../assets/global/plugins/bootstrap-datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL PLUGINS -->
<%- include ./shared/_top %>
<%- include ./shared/_sidebar %>

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <h3 class="page-title">
            权限信息 <small>......</small>
        </h3>
        <!-- END PAGE HEADER-->
        <div class="box box-solid">
            <div class="box-header with-border">
                <i class="fa fa-search"></i>
                <h3 class="box-title">查询</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <form id='search'>
                    <label class="control-label" for="action_name">权限名：</label>
                    <input type="text" name="action_name" class="input-control" />
                    <button type="button" id="btnSearch" class="btn btn-success"> <i class="fa fa-search"></i>查询
                    </button>
                </form>
            </div><!-- /.box-body -->
        </div>
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-picture"></i> 数据列表
                        </div>

                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable">
                            <table id="grid" class="table table-striped table-bordered table-hover dataTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>权限名</th>
                                        <th>是否内置</th>
                                        <th>备注</th>
                                        <th style="width:120px;">操作</th>
                                    </tr>
                                </thead>
                                <tbody v-if="DataList.length > 0">
                                    <tr v-for="(item, index) in DataList">
                                        <td>{{ index+1 }}</td>
                                        <td>{{ item.action_name }}</td>
                                        <td>{{ item.is_builtin }}</td>
                                        <td>{{ item.remark }}</td>
                                        <td>
                                            <div v-html="get_do(item.ID, item.Status)"></div>
                                        </td>
                                    </tr>
                                </tbody>
                                <tbody v-else>
                                    <tr>
                                        <td colspan="4" style="text-align:center;">没有数据</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <ul class="pagination"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->


    </div>

    <!-- edit -->
    <div class="modal fade" id="mod_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"
        style="display: none;">
        <div class="modal-dialog" style="width:360px;">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title">权限信息</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body ">
                    <form id="record">
                        <div class="form-body">
                            <div class="form-group">
                                <label for="action_name">权限名</label>
                                <input id="action_name" name="action_name" class="form-control input-large" placeholder="请输入权限名" />
                            </div>
                            <div class="form-group">
                                <label for="remark">备注</label>
                                <textarea id="remark" name="remark" rows="4" class="form-control" placeholder="请输入备注"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="hidden" id="id" name="id" class="form-control input-medium" placeholder="请输入ID" />
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
                    <a href="#" id="btnChange" class="btn btn-primary">保存</a>
                </div>
            </div>
        </div>
    </div><!-- /edit -->

</div>
<!-- END CONTENT -->
</div>
<!-- END CONTAINER -->


<%- include shared/_bottom %>
<%- include shared/_scripts %>
<script src="../assets/global/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap-paginator/bootstrap-paginator.js"></script>
<script src="/javascripts/include/moment.min.js"></script>
<script src="/javascripts/include/query.js"></script>
<script src="/javascripts/action.js" type="text/javascript"></script>
<%- include shared/_footer %>