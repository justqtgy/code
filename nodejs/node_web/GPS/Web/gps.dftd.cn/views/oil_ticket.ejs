<%- include shared/_header %>
<%- include shared/_top %>
<%- include shared/_sidebar %>
        <div id="loading">
			<img src="/images/loading.gif" alt="loading" />
		</div>

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
		      <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title">
            油票核对 <small>核对油票和系统加油是否一致</small>
            </h3>
            
            <!-- END PAGE HEADER-->
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">查询</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
					<form  id='search'>         
						<label class="control-label" for="txtBeginTime">开始时间：</label><input type="text" id="txtBeginTime" name="begintime" class="form_datetime"  value="<%= start_date %>"/>
						<label class="control-label" for="txtEndTime">结束时间：</label><input type="text" id="txtEndTime" name="endtime" class="form_datetime" value="<%= end_date %>"/>
						<label class="control-label" for="selCar">车辆选择：</label><select class="multiselect display-none" multiple="multiple" ></select>
						<button type="button" id="btnSearch" class="btn btn-success"> <i class="fa fa-search"></i>查询 </button>
						<button type="button" id="btnExcel" class="btn btn-success"> <i class="fa fa-search"></i>导出 </button>
					</form>
                </div><!-- /.box-body -->
            </div>
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
              <div class="col-md-12">
				   <div id="oil_sum">            
						<div class="note note-info note-bordered">
							<p> 油票加油量 ：<span id="sp_oil2"/></p>
						</div>
						<div class="note note-warning note-bordered">
							<p> 系统加油量 ：<span id="sp_oil1"/></p>
						</div>
					</div>

					<div class="portlet box green display-hide" id="oil_detail" >
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-picture"></i> 数据列表
							</div>						 
						</div>
						<div class="portlet-body">							 
							<table id="grid" class="table table-striped table-bordered table-hover dataTable">
								<thead>
									<tr>               
										<th>车牌号</th> 
										<th>时间</th> 
										<th>状态</th>
										<th>油票</th>       
										<th>系统加油量</th>       
										<th>差值</th>                                          
									</tr>
								</thead>
								<tbody>
								
								</tbody>
							</table>	
							<div>
								<ul id="Pagination" class="pagination"></ul>
							</div>			
						</div>	 
					</div>
              </div>
            </div>
            <!-- END PAGE CONTENT-->

            
          </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
    
<%- include shared/_bottom %>
<%- include shared/_scripts %>
	<script src="/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
	<script src="/plugins/pagination/bootstrap-paginator.js"></script>
	<script src="/javascripts/include/date-utils.min.js"></script>
	<script src="/javascripts/oil_ticket.js" type="text/javascript"></script>
  <script src="/plugins/datepicker/bootstrap-datepicker.js"></script>
	<script src="/plugins/datepicker/locales/bootstrap-datepicker.zh-CN.js"></script>
<%- include ./control/_group %> 
    <script>
        $(function(){
					$("#txtBeginTime, #txtEndTime").datepicker({ format: 'yyyy-mm-dd' });
					$("#btnSearch").click(function(){
						get_list(1);
					});
					
					$("#btnExcel").click(function(){
						get_excel();
					});
				 
				});
    </script>
<%- include shared/_footer %>
