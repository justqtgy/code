
<%- include ./shared/_header %>
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="../assets/global/plugins/bootstrap-datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
<%- include ./shared/_top %>
<%- include ./shared/_sidebar %>        

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title">
                配货信息 <small>查看信息</small>
            </h3>
                
            <!-- END PAGE HEADER-->
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">查询</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <form  id='search'>                                            
                        <label class="control-label" for="txtBeginTime">开始时间：</label>
                        <input type="text" name="begintime"  class="date-picker input-control" value="<%= start_date %>"  data-date-format="yyyy-mm-dd"/>
                        <label class="control-label" for="txtEndTime">结束时间：</label>
                        <input type="text" name="endtime"  class="date-picker input-control" value="<%= end_date %>"  data-date-format="yyyy-mm-dd"/>
                        <button type="button" id="btnSearch" class="btn btn-success"> <i class="fa fa-search"></i>查询 </button>
                    </form>
                </div><!-- /.box-body -->
            </div>
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-picture text-center"></i> 数据列表
                                
                            </div> 
                            <div class="actions">
                                <a href="javascript:;" class="btn btn-default btn-sm" onclick="add_record(0);" >
                                <i class="fa fa-pencil"></i> 添加 </a>
                            </div>

                            <!--<div class="tools caption">
                            
                                <a href="#" onclick="show_modal(0);" title='添加记录'>
                                    <i class="fa fa-plus"></i>
                                </a>
                                     
                            </div>           -->            
                        </div>
                        <div class="portlet-body">
                            <div class="table-scrollable">                  
                                    <table id="grid" class="table table-striped table-bordered table-hover dataTable">
                                        <thead>
                                            <tr>
                                                <th>#</th> 
                                                <th>标题</th> 
                                                <th>时间</th>                                                                                                        
                                                <th>操作</th> 
                                            </tr>
                                        </thead>
                                        <tbody v-if = "DataList.length > 0">
                                            <tr v-for = "(item, index) in DataList" v-cloak>
                                                <td>{{ index+1 }}</td> 
                                                <td>{{ item.Title }}</td> 
                                                <td>{{ new Date(item.AddTime).toUTCFormat('YYYY-MM-DD HH24:MI:SS') }}</td>            
                                                <td><a href='javascript:;' v-on:click="get_record(item.ID)">查看</a>                                                     
                                                    <a href='javascript:;' v-on:click="delete_record(item.ID)">删除</a></td>
                                            </tr>
                                        </tbody>
                                        <tbody v-else>
                                            <tr><td colspan="4" style="text-align:center;">没有数据</td></tr>
                                        </tbody>                                        
                                        <tbody>                                            
                                        </tbody>
                                    </table>				
                            </div>
                            <div>
                                <ul id="Pagination" class="pagination"></ul>
                            </div>
                        </div>
                    </div>
                </div>	
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->

    <!-- edit -->
    <div class="modal fade" id="mod_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title">信息</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body">
                     <form  id='record' role="form">  
                        <div class="form-group">
                            <label>标题</label>
                            <input type="text" id="txtTitle" name="title" class="form-control"  placeholder="请输入标题"/>
                        </div>
                        <div class="form-group">
                            <label >内容</label>                           
                            <textarea name="content" id="txtContent" class="ckeditor" rows="10" cols="80" >  
                                                            
                            </textarea>
                        </div>                       
                        <div class="form-group">
                            <input type="hidden" id="txtID" name="id" class="form-control"  />                        
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
                    <a href="#" id="btnOK" class="btn btn-primary">保存</a>
                </div>
            </div>
        </div>
    </div><!-- /edit -->
    
<%- include ./shared/_bottom %>
