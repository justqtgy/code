      <div class="weui-cells__title">订单明细</div>
      <div class="weui-cells " v-for="(item, index) in DataList" style="margin-top:0px;">
        <div class="weui-cell">
          <div class="weui-cell__hd">
            <label class="weui-label">时间</label>
          </div>
          <div class="weui-cell__ft">
            <label>{{new Date(item.AddTime).toUTCFormat('YYYY-MM-DD HH24:MI:SS')}}</label>
          </div>
        </div>
        <div class="weui-cell">
          <div class="weui-cell__hd">
            <label class="weui-label">数量</label>
          </div>
          <div class="weui-cell__ft">
            {{item.Number}}
          </div>
        </div>
        <div class="weui-cell">
          <div class="weui-cell__hd">
            <label class="weui-label">单价</label>
          </div>
          <div class="weui-cell__ft">
            ¥{{item.Price}}
          </div>
        </div>
        <div class="weui-cell">
          <div class="weui-cell__hd">
            <label class="weui-label">状态</label>
          </div>
          <div class="weui-cell__ft">
            {{get_status(item.Status)}}
          </div>
        </div>
      </div>
