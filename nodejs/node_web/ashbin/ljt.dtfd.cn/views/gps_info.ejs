<%- include ./shared/_header %>
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="../assets/global/plugins/bootstrap-datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
<%- include ./shared/_top %>
<%- include ./shared/_sidebar %>

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
	     <div class="page-content">
		    <!-- BEGIN PAGE HEADER-->
		    <h3 class="page-title">
		    订单信息 <small>......</small>
		    </h3>
		    <!-- END PAGE HEADER-->

			<!-- BEGIN PAGE CONTENT-->
            <div class="row">
              <div class="col-md-12">
                <div class="portlet box green">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-picture"></i> 数据列表
				</div>
				<div class="actions">
					<a href="javascript:;" class="btn btn-default btn-sm" onclick="app.add();" >
					<i class="fa fa-pencil"></i> 添加 </a>
				</div>
			</div>
			<div class="portlet-body">
				<div class="table-scrollable">
					<table id="grid" class="table table-striped table-bordered table-hover dataTable">
						<thead>
						<tr>
							<th>#</th>
							<th>GPSID</th>
							<th>名称</th>
							<th>地址</th>						 
							<th>备注</th>		
							<th>状态</th>
							<th>操作</th> 					
						</tr>
						</thead>
						<tbody v-if = "DataList.length > 0">
							<tr v-for = "(item, index) in DataList">
								<td>{{ index+1 }}</td> 								
								<td>{{ item.gps_id }}</td> 
								<td>{{ item.name }}</td>							 
								<td>{{ item.address }}</td>							 
								<td>{{ item.remark }}</td> 								
								<td><span v-html = _status[item.status] /></td> 								
								<td><a href='#' v-on:click="get_record(item.id)">编辑</a></td>
							</tr>
						</tbody>
						<tbody v-else>
							<tr><td colspan="7" class="text-center">没有数据</td></tr>
						</tbody>                                
					</table>
				</div>
				<div>
					<ul id="Pagination" class="pagination"></ul>
				</div>
			</div>
		</div>
              </div>
            </div>
            <!-- END PAGE CONTENT-->
          </div>
        </div>
        <!-- END CONTENT -->
 

    <!-- edit -->
    <div class="modal fade" id="mod_info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" style="width:360px;">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title">垃圾桶设置</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body ">   
                    <form id="record">                    
                    <div class="form-body"> 
                        <div class="form-group">
                            <label for="gps_id">GPSID</label>
                            <input id="gps_id" name="gps_id" class="form-control input-large" placeholder="请输入GPS号"/>
                        </div>
						<div class="form-group">
                            <label for="gps_name">名称</label>
                            <input id="gps_name" name="gps_name" class="form-control input-large" placeholder="请输入垃圾桶的名称"/>
                        </div>
                        <div class="form-group">
                            <label for="address">地址</label>
                            <input id="address" name="address" class="form-control input-large" placeholder="请输入垃圾桶的位置"/>
                        </div>
						<div class="form-group">
                            <label for="remark">备注</label>
							<textarea id="remark" name="remark" rows="4" class="form-control" placeholder="请输入备注"></textarea>                            
                        </div>
						<div class="form-group">
                            <label for="status">是否使用</label>
							<input type="checkbox" id="status" name="status" checked="checked" />               
                        </div>
                        <div class="form-group">
                            <input type="hidden" id="id" name="id" class="form-control input-medium" placeholder="请输入ID" />                        
                        </div>
						
                    </div></form>    
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
                    <a href="#" id="btnChange" class="btn btn-primary">保存</a>
                </div>
            </div>
        </div>
    </div><!-- /edit -->

