    <!-- BEGIN PAGE LEVEL PLUGINS -->
	<link href="../assets/global/plugins/jstree/dist/themes/default/style.min.css" rel="stylesheet" type="text/css" />
    <link href="../assets/global/plugins/bootstrap-datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
	<link href="../assets/global/plugins/bootstrap-switch/css/bootstrap-switch.css" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/profile.css" rel="stylesheet" type="text/css"/>

    <!-- END PAGE LEVEL PLUGINS -->
<%- include ./shared/_top %>
<%- include ./shared/_sidebar %>

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
	     <div class="page-content">
		    <!-- BEGIN PAGE HEADER-->
		    <h3 class="page-title">
		    代理信息 <small>只能看到三级以内的代理</small>
		    </h3>
		    <!-- END PAGE HEADER-->
		    <!-- BEGIN PAGE CONTENT-->

            <div class="row">
                <div class="col-md-12">
                    <div class="profile-sidebar">
                        <div class="portlet light profile-sidebar-portlet">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="icon-social-dribbble font-blue-sharp"></i>
                                    <span class="caption-subject font-blue-sharp bold uppercase">代理信息</span>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div id="tree_group" class="tree-demo">

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="profile-content">
                        <div class="portlet light ">
							<div class="portlet-body form ">
								<form class="form-horizontal" id="record" role="form" >
									<div id="#detail" class="form-body">
										<input type="hidden" id="hidID" name="ID" />
										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">上级代理</label>
											<div class="col-md-4">
												<input type="hidden" id="txtParentID" name="ParentID" class="form-control" readonly/>
												<input type="text" id="txtParentName" name="ParentName" class="form-control" readonly/>
												<div class="form-control-focus"> </div>
											</div>
										</div>
										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">代理号</label>
											<div class="col-md-4">
												<input type="text" id="txtMemberNo" name="MemberNo" class="form-control" />
												<div class="form-control-focus"> </div>
											</div>
										</div>
										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">代理账号</label>

											<div class="col-md-4">
												<input type="text" id="txtAccount" name="Account" class="form-control" placeholder="请输入代理账号"/>
												<div class="form-control-focus"> </div>
											</div>
										</div>
										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">姓名</label>
											<div class="col-md-4">
												<input type="text" id="txtTrueName" name="TrueName" class="form-control" placeholder="请输入姓名"/>
												<div class="form-control-focus"> </div>
											</div>
										</div>
										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">身份证</label>

											<div class="col-md-4">
												<input type="text" id="txtIDCard" name="IDCard" class="form-control" placeholder="请输入身份证"/>
												<div class="form-control-focus"> </div>
											</div>
										</div>

										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">手机号码</label>
											<div class="col-md-4">
												<input type="text" id="txtMobile" name="Mobile" class="form-control" placeholder="请输入手机号码"/>
												<div class="form-control-focus"> </div>
											</div>
										</div>


										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">加入时间</label>

											<div class="col-md-4">
												<input type="text" id="txtJoinTime" name="JoinTime" data-date-format="yyyy-mm-dd"  class="date-picker form-control" placeholder="请选择加入时间"/>
												<div class="form-control-focus"> </div>
											</div>
										</div>

										<div class="form-group form-md-line-input">
											<label class="col-md-2 control-label">状态</label>

											<div class="col-md-4">
												<div class="switch">
													<input type="checkbox" id="chkStatus" name="Status" checked />
												</div>

											</div>
										</div>

									</div>
									<div class="form-actions display-none">
										<div class="row">
											<div class="col-md-offset-2 col-md-8">
												<button type="button" id="btnSave" class="btn green">保存</button>
											</div>
										</div>
									</div>

								</form>
							</div>
						</div>

                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT-->
          </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->

