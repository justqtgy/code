
<%- include ./shared/_header %>
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="../assets/global/plugins/bootstrap-datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
<%- include ./shared/_top %>
<%- include ./shared/_sidebar %>        

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title">
                人员信息 <small>登录管理员信息</small>
            </h3>
                
            <!-- END PAGE HEADER-->
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">查询</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <form  id='search'>  
                                           
                        <label class="control-label" for="txtBeginTime">账号：</label>
                        <input type="text" name="account"  />
                       
                        <button type="button" id="btnSearch" class="btn btn-success"> <i class="fa fa-search"></i>查询 </button>
                    </form>
                </div><!-- /.box-body -->
            </div>
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-picture"></i> 数据列表
                            </div>                            
                        </div>
                        <div class="portlet-body">
                            <div class="table-scrollable">                  
                                    <table id="grid" class="table table-striped table-bordered table-hover dataTable">
                                        <thead>
                                            <tr>
                                                <th>#</th> 
                                                <th>车牌号</th> 
                                                <th>设备号</th> 
                                                <th>当前油量</th>                             
                                                <th>我的位置</th> 
                                                <th>最后更新时间</th>                                
                                            </tr>
                                        </thead>
                                        <tbody v-if = "DataList.length > 0">
                                            <tr v-for = "(item, index) in DataList">
                                                <td>{{ index+1 }}</td> 
                                                <td>{{ item.VehicleNo }}</td> 
                                                <td>{{ item.GPSID }}</td> 
                                                <td>{{ item.CurOil }}</td>       
                                                <td><a  v-bind:href="'map.html?lng1='+item.Lng+'&lat1='+item.Lat+'&type=location'" target="_blank">查看</a> </td>                                                         
                                                <td>{{ new Date(item.UpdateTime).toUTCFormat('YYYY-MM-DD HH24:MI:SS') }}</td>  
                                            </tr>
                                        </tbody>
                                        <tbody v-else>
                                            <tr><td colspan="6" style="text-align:center;">没有数据</td></tr>
                                        </tbody>
                                    </table>				
                            </div>
                            <div>
                                <ul id="Pagination" class="pagination"></ul>
                            </div>
                        </div>
                    </div>
                </div>	
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->

    <!-- edit -->
    <div class="modal fade" id="info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="box-header with-border">
                    <i class="fa fa-list-alt"></i>
                    <h3 class="box-title">用户管理</h3>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div><!-- /.box-header -->
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label for="txtUserName">姓名：</label>
                        <input type="text" id="txtUserName" name="UserName" class="form-control" placeholder="请输入UserName" />
                    </div>
                    <div class="form-group">
                        <label for="txtMobile">联系方式：</label>
                        <input type="text" id="txtMobile" name="Mobile" class="form-control" placeholder="请输入Mobile" />
                    </div>
                    <div class="form-group">
                        <label for="txtParkID">所属园区：</label>
                        <input type="text" id="txtParkID" name="ParkID" class="form-control" placeholder="请输入ParkID" />
                    </div>                    
                    <div class="form-group">
                        <input type="hidden" id="txtID" name="ID" class="form-control" placeholder="请输入ID" />
                        <input type="hidden" id="txtWeiXinID" name="WeiXinID" class="form-control" placeholder="请输入WeiXinID" />
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">取消</a>
                    <a href="#" id="btnOK" class="btn btn-primary">保存</a>
                </div>
            </div>
        </div>
    </div><!-- /edit -->
    
<%- include ./shared/_bottom %>
