<%- include shared/_header %>
<%- include shared/_top %>
<%- include shared/_sidebar %>
        <div id="loading">
			<img src="/images/loading.gif" alt="loading" />
		</div>
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
		      <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <h3 class="page-title">
            漏油报警 <small>漏油报警数据</small>
            </h3>
             
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">查询</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <label class="control-label" for="txtBeginTime">开始时间：</label><input type="text" id="txtBeginTime" class="form_datetime"  value="<%= start_date %>"/>
					<label class="control-label" for="txtEndTime">结束时间：</label><input type="text" id="txtEndTime" class="form_datetime" value="<%= end_date %>"/>
                    <label class="control-label" for="selCar">车辆选择：</label><select class="multiselect display-none" multiple="multiple" ></select>
                    <button type="button" id="btnSearch" class="btn btn-success"> <i class="fa fa-search"></i>查询 </button>
                </div><!-- /.box-body -->
            </div>
            
            <!-- END PAGE HEADER-->
            
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">

              <div class="col-md-12">
				<!-- BAR CHART -->
				<div id="div_chart" class="box box-success">
					<div class="box-header with-border">
						<h3 class="box-title">漏油报表</h3>
					</div>
					<div class="box-body chart-responsive">
						<div id="container" style="min-width: 300px; margin: 0 auto"></div>
					</div>
				</div>
				
                <div id="div_grid" class="portlet box green" style="display:none;">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-picture"></i> 数据列表
						</div>
						
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table id="grid" class="table table-striped table-bordered table-hover dataTable">
							<thead>
                                <tr>
                                    <th>id</th>
                                    <th>车牌号码</th>
                                    <th>时间</th>
                                    <th>油量</th>
                                    <th>漏油量 </th>
                                    <th>纬度</th>
                                    <th>经度</th>
                                    <th>状态</th>
                                    <th>速度</th>
                                    <th>总里程</th>
                                    <th>里程</th>
                                    <th>百公里油耗</th>
                                    <th>车辆位置</th>

                                </tr>
                            </thead>
							<tbody>
							
							</tbody>
							</table>							
						</div>
						<div>
							<ul id="Pagination" class="pagination"></ul>
						</div>
					</div>
				</div>
              </div>
            </div>
            <!-- END PAGE CONTENT-->

            
          </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
    
<%- include shared/_bottom %>
<%- include shared/_scripts %>
	<script src="/plugins/bootbox/bootbox.min.js" type="text/javascript"></script>
	<script src="/plugins/pagination/bootstrap-paginator.js"></script>
	<script src="/javascripts/include/date-utils.min.js"></script>
    <script src="/javascripts/include/init.js"></script>
	<script src="/plugins/datepicker/bootstrap-datepicker.js"></script>
	<script src="/plugins/datepicker/locales/bootstrap-datepicker.zh-CN.js"></script>
	<script src="/plugins/Highcharts/highcharts.js"></script>
	<script src="/javascripts/oil_vhc_dv.js" type="text/javascript"></script>
    <%- include ./control/_group %> 
    <script>
        $(function(){
			$("#txtBeginTime, #txtEndTime").datepicker({ format: 'yyyy-mm-dd' });
			$("#btnSearch").click(function(){
					create_charts(1,'漏油报表');
				});
		});
    </script>

<%- include shared/_footer %>
